{
  "name": "@teipublisher/pb-components",
  "version": "0.9.1",
  "description": "Collection of webcomponents underlying TEI Publisher (Work in progress)",
  "repository": "https://gitlab.existsolutions.com/tei-publisher/pb-components.git",
  "main": "index.html",
  "scripts": {
    "build": "npm run docs && npm run osd && rollup -c rollup.config.js",
    "build:production": "npm run docs && npm run osd && rollup -c rollup.config.js --environment BUILD:production",
    "start": "npm run build && es-dev-server --app-index docs.html --node-resolve --open --watch",
    "test": "karma start",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "docs": "polymer analyze > analysis.json",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "clean": "rimraf bundle.js && rimraf assets && npm run build",
    "prepare": "npm run build:production",
    "osd": "rollup -c osd.rollup.config.js",
    "storybook": "npm run analyze 6& start-storybook --node-resolve --watch --open",
    "analyze": "web-component-analyzer src --format json --outFile custom-elements.json",
    "storybook:build": "build-storybook"
  },
  "author": "Wolfgang Meier",
  "license": "GPL-3.0-or-later",
  "dependencies": {
    "@cwmr/paper-autocomplete": "^4.0.0",
    "@polymer/app-layout": "^3.1.0",
    "@polymer/iron-ajax": "^3.0.1",
    "@polymer/iron-collapse": "^3.0.1",
    "@polymer/iron-form": "^3.0.1",
    "@polymer/iron-icon": "^3.0.1",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/iron-iconset": "^3.0.1",
    "@polymer/iron-pages": "^3.0.1",
    "@polymer/neon-animation": "^3.0.1",
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-card": "^3.0.1",
    "@polymer/paper-checkbox": "^3.1.0",
    "@polymer/paper-dialog": "^3.0.1",
    "@polymer/paper-dialog-scrollable": "^3.0.1",
    "@polymer/paper-dropdown-menu": "^3.0.1",
    "@polymer/paper-fab": "^3.0.1",
    "@polymer/paper-icon-button": "^3.0.2",
    "@polymer/paper-input": "^3.0.2",
    "@polymer/paper-item": "^3.0.1",
    "@polymer/paper-listbox": "^3.0.1",
    "@polymer/paper-menu-button": "^3.0.1",
    "@polymer/paper-progress": "^3.0.1",
    "@polymer/paper-tabs": "^3.1.0",
    "@polymer/paper-tooltip": "^3.0.1",
    "@vaadin/vaadin-upload": "^4.2.2",
    "@webcomponents/webcomponentsjs": "latest",
    "js-cookie": "^2.2.1",
    "leaflet": "^1.5.1",
    "lit-element": "latest",
    "lit-html": "^1.1.2",
    "openseadragon": "^2.4.1",
    "web-animations-js": "^2.3.2"
  },
  "devDependencies": {
    "@open-wc/demoing-storybook": "^1.3.10",
    "@open-wc/eslint-config": "^1.0.0",
    "@open-wc/prettier-config": "^0.1.10",
    "@open-wc/testing": "^2.3.3",
    "@open-wc/testing-karma": "^3.1.32",
    "@polymer/iron-component-page": "^4.0.1",
    "@polymer/iron-demo-helpers": "^3.1.0",
    "deepmerge": "^4.0.0",
    "es-dev-server": "^1.5.0",
    "eslint": "^6.1.0",
    "karma": "^4.3.0",
    "lint-staged": "^8.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.24.0",
    "rollup-plugin-analyzer": "^3.2.1",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-copy": "^3.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-terser": "^5.1.2",
    "web-component-analyzer": "^1.0.0"
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ]
  },
  "prettier": "@open-wc/prettier-config",
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  }
}